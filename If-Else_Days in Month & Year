
#include <stdio.h>

int main()
{
    int mnth,year;
    scanf("%d",&mnth);
    scanf("%d",&year);
    if((mnth>=1&&mnth<=12) && year>=1) {
        if((year%4==0 && year%100!=0)||(year%400==0)) {
            switch(mnth)
            {
            case 1:
                printf("31");
                break;
            case 2:
                printf("29");
                break;
            case 3:
                printf("30");
                break;
            case 4:
                printf("31");
                break;
            case 5:
                printf("31");
                break;
            case 6:
                printf("30");
                break;
            case 7:
                printf("31");
                break;
            case 8:
                printf("31");
                break;
            case 9:
                printf("30");
                break;
            case 10:
                printf("31");
                break;
            case 11:
                printf("30");
                break;
            case 12:
                printf("31");
                break;
            }

        }
        else {
            switch(mnth)
            {
            case 1:
                printf("31");
                break;
            case 2:
                printf("28");
                break;
            case 3:
                printf("30");
                break;
            case 4:
                printf("31");
                break;
            case 5:
                printf("31");
                break;
            case 6:
                printf("30");
                break;
            case 7:
                printf("31");
                break;
            case 8:
                printf("31");
                break;
            case 9:
                printf("30");
                break;
            case 10:
                printf("31");
                break;
            case 11:
                printf("30");
                break;
            case 12:
                printf("31");
                break;
            }
        }

        }
        else {
            if(mnth<1 || mnth>12) {
                printf("Invalid Month\n");
            }
            if(year<1) {
                printf("Invalid Year");
            }
        }
        return 0;
    }
